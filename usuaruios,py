# usuarios.py
usuarios_registrados = {
    'usuario1': 'contraseña1',
    'usuario2': 'contraseña2'
}

def registrar_usuario(nombre_usuario, contraseña):
    if nombre_usuario not in usuarios_registrados:
        usuarios_registrados[nombre_usuario] = contraseña
        print(f"El usuario '{nombre_usuario}' se ha registrado con éxito.")
    else:
        print("El nombre de usuario ya está en uso.")

def autenticar_usuario(nombre_usuario, contraseña):
    if nombre_usuario in usuarios_registrados and usuarios_registrados[nombre_usuario] == contraseña:
        print(f"¡Bienvenido, {nombre_usuario}!")
        return True
    else:
        print("Nombre de usuario o contraseña incorrectos.")
        return False
